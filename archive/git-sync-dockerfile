FROM golang:1.21-alpine AS builder

WORKDIR /workspace
COPY go.mod go.sum ./
RUN go mod download

COPY git-sync.go ./
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags='-w -s -extldflags "-static"' \
    -a -installsuffix cgo \
    -o git-sync git-sync.go

FROM alpine:latest

RUN apk --no-cache add ca-certificates curl git openssh-client
WORKDIR /root/

COPY --from=builder /workspace/git-sync /usr/local/bin/git-sync
RUN chmod +x /usr/local/bin/git-sync

EXPOSE 8080

CMD ["/usr/local/bin/git-sync"]